#:import get_color_from_hex kivy.utils.get_color_from_hex
#:import window kivy.core.window


<TutorialScreen>:
    id: tutorial_screen

    MDBoxLayout:
        orientation: "vertical"

        MDToolbar:
            id: tool_bar
            title: "Propoint"
            md_bg_color: rail.md_bg_color
            left_action_items: [["menu", lambda x: tutorial_screen.rail_open()]]

        MDBoxLayout:

            MDNavigationRail:
                id: rail
                md_bg_color: get_color_from_hex("#9962d1")
                color_normal: get_color_from_hex("#ecd9ff")
                color_active: None
                use_hover_behavior: True
                hover_bg: 0, 0, 0, .2
                use_resizeable: True

                MDNavigationRailItem:
                    icon: "home"
                    text: "Home"

                    on_release:
                        app.root.screen_transition_home()

                MDNavigationRailItem:
                    icon: "teach"
                    text: "Tutorial"

                    on_release:
                        app.root.screen_transition_tutorial()

                MDNavigationRailItem:
                    icon: "plus-circle"
                    text: "Create Project"

                    on_release:
                        tutorial_screen.open_file_manager()

            Widget:
                id: document_container
                pos: rail.width, window.Window.height - tool_bar.height

<Cell>:
    id: cell
    color: 0, 0, 0, 1

    canvas:
        Color:
            rgba:
                cell.border_color if not cell.is_selected else (0, 0, 1, 1)
        Line:
            width: 1
            rectangle: (self.x, self.y, self.width, self.height)

    canvas.before:
        Color:
            rgba:
                cell.master_bg_color if cell.is_master else (192 / 255, 206 / 255, 250 / 255, 1) if cell.is_selected else (1, 1, 1, 1)
        Rectangle:
            pos: cell.pos
            size: cell.size

    on_release:
        app.root.editor_screen.master_selection(cell=cell) if cell.is_master else app.root.editor_screen.unselect_master_selections()

<DashBoard>:
    pos: (app.root.editor_screen.ids.rail.width,  0)
    pos_hint: None, None
    size: (window.Window.width - app.root.editor_screen.ids.rail.width, window.Window.height - (app.root.editor_screen.ids.tool_bar.height + app.root.editor_screen.drop_down_tool_bar_height))
    size_hint: None, None


<RecyclerDashBoardLayout>:
    id: recycle_view
    viewclass: 'Cell'
    bar_width: 10
    bar_color: get_color_from_hex("#757575")
    bar_inactive_color: get_color_from_hex("#918996")
    effect_cls: "ScrollEffect"
    scroll_type: ["bars"]

    RecycleGridLayout:
        cols_minimum: root.cols_minimum
        default_size: None, dp(56)
        default_size_hint: 1, None
        size_hint: None, None
        size_hint_y: None
        width: self.minimum_width
        height: self.minimum_height
        cols: recycle_view.max_cols

<PopupContent>:
    id: popup_content
    cols: 1
    md_bg_color: (1, 1, 1, 1)

    MDGridLayout:
        cols: 1

        AnchorLayout:
            MDTextField:
                id: update_text_field
                hint_text: "Update cell"
                text: root.cell_text
                mode: "rectangle"
                line_color_focus: (0, 0, 0, 1)
                size_hint: None, None
                size: 300, self.height

        MDGridLayout:
            cols: 2
            Widget:
                spacing: 100

            MDRaisedButton:
                text: "Update"
                md_bg_color: get_color_from_hex("#9962d1")
                on_release: app.root.editor_screen.update_cell(text_field_data=update_text_field.text, cell=popup_content.clicked_cell); popup_content._popup.dismiss()

<MySnackBar>
    MDLabel:
        id: text_bar
        size_hint_y: None
        height: self.texture_size[1]
        text: root.text
        font_size: root.font_size
        theme_text_color: 'Custom'
        text_color: get_color_from_hex('ffffff')
        shorten: True
        shorten_from: 'right'
        pos_hint: {'center_y': .5}

<Item>:
    text: root.text
    on_release:
        app.root.editor_screen.list_item_callback(selected_math_operation=root.text)
    IconLeftWidget:
        icon: "plus-minus-variant"


<NewColumnIndicator>:
    id: new_column_indicator
    text: root.text
    size_hint: None, None
    height: "30dp"
    width: "40dp"
    background_color: (0, 0, 0, 0)
    multiline: False

<HistoryCard>:
    id: history_card
    orientation: "vertical"
    size_hint: None, None
    size: 200, 200
    focus_behavior: True
    ripple_behavior: True
    on_release:
        app.root.home_screen.open_dialog(card_instance=root)

    MDBoxLayout:
        Widget:
            size_hint: None, None
            size: 10, root.height
            canvas.before:
                Color:
                    rgba: get_color_from_hex("#9962d1")
                Rectangle:
                    pos: self.pos
                    size: self.width, root.height

        MDGridLayout:
            cols: 1

            MDLabel:
                text: root.title
                font_style: "H5"
                font_name: "assets/fonts/Heebo-Bold.ttf"
                bold: True
                size_hint_y: None
                height: self.texture_size[1]

            MDSeparator:

            MDLabel:
                text: "Date of modify: " + root.date_of_modify
                size_hint_y: None
                font_name: "assets/fonts/Heebo-Regular.ttf"
                height: self.texture_size[1]

<HistoryCardContainer>:
    size_hint: None, None
    cols: (window.Window.width - self.rail_width) // (200 + 30) if (window.Window.width - root.rail_width) // (200 + 30) > 1 else 1

<HomeScreen>:
    id: home_screen

    MDBoxLayout:
        orientation: "vertical"

        MDToolbar:
            id: tool_bar
            title: "Welcome to Propoint"
            md_bg_color: rail.md_bg_color
            left_action_items: [["menu", lambda x: home_screen.rail_open()]]

        MDBoxLayout:
            id: main_box_layout
            MDNavigationRail:
                id: rail
                md_bg_color: get_color_from_hex("#9962d1")
                color_normal: get_color_from_hex("#ecd9ff")
                color_active: None
                use_hover_behavior: True
                spacing: "10dp"
                hover_bg: 0, 0, 0, .2
                use_resizeable: True

                MDNavigationRailItem:
                    icon: "home"
                    text: "Home"

                    on_release:
                        app.root.screen_transition_home()

                MDNavigationRailItem:
                    icon: "teach"
                    text: "Tutorial"

                    on_release:
                        app.root.screen_transition_tutorial()

                MDNavigationRailItem:
                    icon: "plus-circle"
                    text: "Create Project"

                    on_release:
                        home_screen.open_file_manager()

<NotOverwriteDialogContent>
    orientation: "vertical"
    spacing: "6dp"
    size_hint_y: None
    height: "60dp"

    MDTextField:
        id: filename_field
        hint_text: "Enter workbook name"

<EditorScreen>:
    id: editor_screen
    drop_down_tool_bar_height: 50

    MDBoxLayout:
        orientation: "vertical"

        MDToolbar:
            id: tool_bar
            title: "Edit workbook"
            md_bg_color: rail.md_bg_color
            left_action_items: [["arrow-left", lambda x: editor_screen.back_to_home()]]

        MDBoxLayout:
            MDNavigationRail:
                id: rail
                md_bg_color: get_color_from_hex("#9962d1")
                color_normal: get_color_from_hex("#ecd9ff")
                color_active: None
                use_hover_behavior: True
                hover_bg: 0, 0, 0, .2
                use_resizeable: True

                MDNavigationRailItem:
                    icon: "cursor-default"
                    text: "Select"

                MDNavigationRailItem:
                    icon: "tools"
                    text: "Tools"
                    on_release:
                        editor_screen.toolbar_menu_tools()

            Widget:
                canvas.before:
                    Color:
                        rgba: get_color_from_hex("#bca3d6")
                    Rectangle:
                        pos: rail.width, ((window.Window.height - tool_bar.height) - editor_screen.drop_down_tool_bar_height)
                        size: tool_bar.width, editor_screen.drop_down_tool_bar_height

                MDBoxLayout:
                    id: main_tool_bar
                    pos: rail.width, ((window.Window.height - tool_bar.height) - 50)
                    size: 1000, editor_screen.drop_down_tool_bar_height

                    MDDropDownItem:
                        id: drop_item_sheets
                        text: "Sheets"
                        font_name: "assets/fonts/Heebo-Regular.ttf"
                        on_release: editor_screen.toolbar_menu_sheets()

                    MDTextFieldRect:
                        id: command_palette
                        size_hint: 1, None
                        height: "30dp"
                        multiline: False
                        hint_text: "Command palette"
                        on_text: editor_screen.validate(command=self.text)

                    MDFlatButton:
                        text: "Execute"
                        theme_text_color: "Custom"
                        text_color: 0, 0, 0, 1
                        on_release:
                            if not editor_screen.selection_mode:\
                            editor_screen.execute_command(command=command_palette.text); command_palette.text = ""
                            else:\
                            editor_screen.execute_command(command=command_palette.text); command_palette.text = ""

                    MDRectangleFlatIconButton:
                        icon: "content-save"
                        text: "Save"
                        theme_text_color: "Custom"
                        text_color: 0, 0, 0, 1
                        line_color: 0, 0, 0, 0
                        icon_color: 0, 0, 0, 1
                        on_release: editor_screen.save_dialog()

            Widget:
                id: container
                pos: (rail.width, window.Window.height - (tool_bar.height + main_tool_bar.height))
